#!/usr/bin/env python3
"""
Add extra section heading at end of document:

    # References

"""

import json
import sys
import os
sys.path.append(os.path.join(os.environ['PANZER_SHARED'], 'python'))
from pandocfilters import *


def main():
    """docstring for main"""
    ast = json.load(sys.stdin)
    if ast[0]['unMeta']['refs']['c']:
        ast[1].append(Header(1, attributes({'id': 'references'}), [Str('References')]))
    sys.stdout.write(json.dumps(ast))
    sys.stdout.flush()

# Standard boilerplate to call the main() function to begin
# the program.
if __name__ == '__main__':
    main()

