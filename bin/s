#!/usr/bin/env bash
sortString="sort"

while [ $# -gt 0 ];do
  if [ "$1" = "-x" ];then
    sortString=${sortString}" -k2,2n"
    shift
  elif [ "$1" = "-y" ];then
    sortString=${sortString}" -k3,3n"
    shift
  elif [ "$1" = "-z" ];then
    sortString=${sortString}" -k4,4n"
    shift
  elif [ "$1" = "-t" ];then
    sortString=${sortString}" -k1,1r"
    shift
    # else
    #   filein=$1
    #   shift
  fi
done

while read line;do
  if [[ $file = "" ]]; then
    file=${line}
  else
    file=${file}"\n"${line}
  fi
done

echo -e "$file"|awk -v sort="$sortString" '
{
  if($0~/K_POINTS/){
    close(sort)
    parse=3
    print $0
    a=$0
    getline
    if($0!=a) print $0
  }
  if(parse==2){
    if(sort != "sort")
      print $0|sort
    else 
      print $0
  }
  if($0~/ATOMIC_POSITIONS/){
    print $0
    parse=2
  }
  if(parse==1){
    printf("%-2s  %-6s   %-s\n", $1,$2,$3)
  }
  if($0~/ATOMIC_SPECIES/){
    print $0
    parse=1
  }
  if(parse==0)
  {
    if($0~"&"||$0~"/")
      printf("%-20s%s %-8s\n", $1,$2,$3)
    else if($1=="!")
      printf("! %-20s%s %-8s\n", $2,$3,$4)
    else
      printf("  %-20s%s %-8s\n", $1,$2,$3)
  }
}' 
