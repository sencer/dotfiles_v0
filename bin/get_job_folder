#!/usr/bin/env bash 
jobId=$(qstat -u `whoami`|awk -vjob=$1 '$4==job".job"{print gensub("\\..*","","",$1)}')
if [[ $jobId != "" ]]; then
  jobFolder=$(qstat -f $jobId|grep "Output_Path"|sed 's/[^/]*\(\/.*\/\).*/\1/')
  if [[ jobFolder == "" ]]; then
    exit 1
  else
    jobFolder=$(echo "$jobFolder"|sed 's/\(gpfs\|work\|gscr\|network\|scratch\)\/sselcuk/sselcuk\/\1/g')
    folder=`grep "^$SERVER" $PBS_SERVER_FILE|cut -d' ' -f4`
    [ $folder == "." ] && folder=""
    echo $HOME/$SERVER/${jobFolder#*`whoami`/$folder}
  fi
else
  exit 1
fi
