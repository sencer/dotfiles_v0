#!/usr/bin/env ruby
require 'diyanet'

a = Diyanet.Namaz()

if a.oku('/home/sselcuk/.settings/.namaz')
elsif a.baglan("ABD", "PRINCETON")
  a.yaz
else
  puts "export NAMAZ=-1" 
  exit
end

if ARGV[0].nil?
  a.to_s(3)
elsif ARGV[0].to_i > 0 
  a.to_s(ARGV[0])
elsif ARGV[0] = "export"
  i, j = a.index
  puts "NAMAZ=#{a[i][j].strftime('%s').to_i/60+300}"
else
  a.to_s
end
