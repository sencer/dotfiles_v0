#!/bin/bash
PDFFILE="$1"
VIMSERVER=`basename ${1%.pdf}TEX|tr '[:lower:]' '[:upper:]'`
if vim --serverlist|grep $VIMSERVER &>/dev/null; then
  EDITORCMD="gvim --servername $VIMSERVER --remote-send ':buf ${PDFFILE/.pdf/.tex}<CR>:%l<CR>i<ESC>zt'"
else
  EDITORCMD="gvim --servername $VIMSERVER --remote-silent '+%l<Enter>i<ESC>zt' %f"
fi

if [ -f "$PDFFILE" ];then
  if [ -f "${PDFFILE%%.pdf}.synctex.gz" ];then
    nohup &>/dev/null evince_backward_search "$PDFFILE" "$EDITORCMD"&
    BACKWARD_SEARCH_PID=$!
    # echo $BACKWARD_SEARCH_PID
  fi
fi

/usr/bin/evince "$@"

if [ "$BACKWARD_SEARCH_PID" ];then
  kill $BACKWARD_SEARCH_PID
fi
