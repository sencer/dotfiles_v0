function chpwd(){
  local folder
  if [[ $PWD == $HOME/*  ]];then
    folder=${PWD#$HOME/}
    folder=${folder%%/*}
    export PBSSERVER=`grep "^$folder" $PBSSERVERFILE|cut -d' ' -f1`
  else
    export PBSSERVER=''
  fi
  if [[ -n $TMUX ]]; then
    tmux rename-window "${PBSSERVER:-zsh}"
  fi
}

# vim: ft=zsh
