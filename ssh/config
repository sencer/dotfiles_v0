Host ofis
  Hostname ofis.princeton.edu
  RemoteForward 2319 localhost:22
  ForwardAgent yes
  ForwardX11 yes
  ForwardX11Trusted yes
  IdentityFile ~/.ssh/id_ofis
Host arizona
  Hostname arizona.princeton.edu
Host della
  Hostname della4.princeton.edu
  ProxyCommand ssh -CTqe none arizona -W %h:%p
Host tiger
  Hostname tiger2.princeton.edu
  ProxyCommand ssh -CTqe none ofis -W %h:%p
Host tigress
  Hostname tigressdata.princeton.edu
  ProxyCommand ssh -CTqe none arizona -W %h:%p
Host edison
  Hostname edison.nersc.gov
Host hopper
  Hostname hopper.nersc.gov
Host nano
  Hostname nano.bnl.gov
  ProxyCommand ssh -CTqe none ssh.bnl.gov nc %h %p
Host github.com
  IdentityFile ~/.ssh/id_github
  ControlMaster no
Host *
  Compression yes
  # CompressionLevel 7
  AddressFamily inet
  Ciphers arcfour256,arcfour128,arcfour,blowfish-cbc,aes128-cbc
  PreferredAuthentications publickey,keyboard-interactive,password
  Protocol 2
  XAuthLocation /usr/bin/xauth
  ControlMaster auto
  ControlPath /tmp/%r@%h:%p
  ControlPersist 60
  IdentityFile ~/.ssh/id_rsa
# PermitLocalCommand yes

# vim: ft=sshconfig
